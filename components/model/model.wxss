/* components/model/model.wxss */

.modal_box {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
}

.zhezhao {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.main_box {
  width: 468rpx;
  /* height: 452rpx; */
  background: rgba(255, 255, 255, 1);
  border-radius: 28rpx;
  padding: 50rpx 56rpx;
  position: fixed;
}

.title {
  margin: 54rpx 280rpx 24rpx 0;
  font-size: 26rpx;
  color: rgba(199, 199, 199, 1);
}

.input {
  margin: 0 0 98rpx 0;
  width: 462rpx;
  height: 88rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 10px;
}

.btn_group {
  display: flex;
  justify-content: space-between;
  align-content: center;
  font-size: 30rpx;
}

.btn_style {
  width: 200rpx;
  height: 74rpx;
  border-radius: 48rpx;
  text-align: center;
  line-height: 74rpx;
}

.cancel_style{
  border: 2rpx solid rgba(151, 151, 151, 1);
}

.canfirm_style {
  border:2rpx solid #f2713b;
  background: rgba(242, 113, 59, 1);
}
.tip {
  margin: 54rpx 280rpx 24rpx 0;
  font-size: 26rpx;
  color: rgba(199, 199, 199, 1);
}

.input_box{
  margin: 24rpx 0;
  padding: 10rpx 30rpx;
  font-size: 34rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 10rpx;
}